<% trade ||= @trade %>
<% team ||= @team || trade&.team %>
<%= render 'account/teams/breadcrumbs', team: team %>
<%= render 'account/shared/breadcrumb', label: t('.label'), url: [:account, team, :trades] %>
<% if trade&.persisted? %>
  <%= render 'account/shared/breadcrumb', label: trade.label_string, url: [:account, trade] %>
<% end %>
<%= render 'account/shared/breadcrumbs/actions', only_for: 'trades' %>
